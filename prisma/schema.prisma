generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  image         String?
  role          String    @default("user")
  links         Link[]
  createdAt     DateTime  @default(now())
}

model Link {
  id            String    @id @default(cuid())
  shortSlug     String    @unique 
  originalUrl   String
  title         String?   
  description   String?
  favicon       String?
  
  userId        String?
  user          User?     @relation(fields: [userId], references: [id])
  expiresAt     DateTime? 
  maxClicks     Int?      
  
  clicks        Click[]
  createdAt     DateTime  @default(now())
}

model Click {
  id            String    @id @default(cuid())
  linkId        String
  link          Link      @relation(fields: [linkId], references: [id])
  
  // Anal√≠ticas para tu dashboard
  country       String    @default("Unknown")
  device        String    @default("Desktop")
  source        String    @default("Direct") 
  timestamp     DateTime  @default(now())
}